// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  leads         Lead[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Column {
  id    String @id @default(cuid())
  title String
  order Int
  items Lead[]
}

model Lead {
  id        String   @id @default(cuid())
  title     String
  value     Decimal
  order     Int
  status    String // Stores Column ID relation manually if needed, or rely on relation
  columnId  String?
  column    Column?  @relation(fields: [columnId], references: [id])
  
  contactId String?
  contact   Contact? @relation(fields: [contactId], references: [id])
  
  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id    String  @id @default(cuid())
  name  String
  email String?
  phone String?
  notes String?
  leads Lead[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
